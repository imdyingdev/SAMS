{
  "name": "desktop",
  "version": "2.0.0",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "build": "node build.js",
    "start": "npm run build && electron .",
    "dev": "electron .",
    "dist-win": "npm run build && electron-builder --win",
    "reset-password": "node reset-admin-password.js",
    "check-admin": "node check-admin.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.sams.desktop",
    "productName": "SAMS Desktop",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "SAMS Desktop.exe"
    }
  },
  "devDependencies": {
    "electron": "^36.7.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "echarts": "^6.0.0",
    "exceljs": "^4.4.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "serialport": "^13.0.0"
  }
}
